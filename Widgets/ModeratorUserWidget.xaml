<UserControl x:Class="JudgmentTool.Widgets.ModeratorUserWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JudgmentTool.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Loaded="Grid_Loaded">
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding customFields.photoUrl}" Height="100" Width="100"/>
            <TextBlock Text="{Binding name}" Foreground="{StaticResource MahApps.Brushes.Text}"/>
            <TextBlock x:Name="txtRole" Text="Role" Foreground="{StaticResource MahApps.Brushes.DataGrid.Selection.Background.Disabled}"/>
        </StackPanel>
    </Grid>
</UserControl>
